<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvNomeCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Cliente"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvCPF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="CPF"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tvNomeCliente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvCodigo"
            />
    
        <TextView
            android:id="@+id/tvCodigo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Código"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNomeCliente"
            app:layout_constraintStart_toEndOf="@id/tvCPF"
            app:layout_constraintEnd_toEndOf="parent"
            />
    
        <TextView
            android:id="@+id/tvNumberCPF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="000.000.000-00"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvCPF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvCodigoCliente"/>
    
        <TextView
            android:id="@+id/tvCodigoCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Código cliente"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tvCodigo"
            app:layout_constraintStart_toEndOf="@id/tvNumberCPF"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <TextView
            android:id="@+id/tvTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvNumberCPF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvNumberTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(00) 0000-0000"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvTelefone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvEmailPrin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="E-mail principal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvNumberTelefone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvEmailSecon"/>

        <TextView
            android:id="@+id/tvEmailSecon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="E-mail secundário"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvNumberTelefone"
            app:layout_constraintStart_toEndOf="@id/tvEmailPrin"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvFirstEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="email@email.com"
            app:layout_constraintTop_toBottomOf="@id/tvEmailPrin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvSecEmail"/>

        <TextView
            android:id="@+id/tvSecEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="email@email.com"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tvEmailSecon"
            app:layout_constraintStart_toEndOf="@id/tvFirstEmail"
            app:layout_constraintEnd_toEndOf="parent"/>


        
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>